// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Example {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id            String     @id @default(cuid())
  address       String    @unique
  name          String?
  email         String?    @unique
  image         String?
  isAdmin       Boolean @default(false)
  approved Boolean @default(true)
  campaigns     Campaign[]
  description String?
}


model Campaign {
  id           String   @id @default(cuid())
  title        String   @unique
  host         String?
  description  String?
  time         DateTime
  place        String?
  presenter    String?
  presentTitle String?
  image        String?
  participants User[]
}